<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/AppTheme"
    android:background="@color/white"
    tools:context="com.xcubelabs.bhanuprasadm.materialdemo.fragment.NavigationDrawerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primaryColorDark"
        android:id="@+id/containerImageLayout"
        android:padding="@dimen/padding_left"
        android:elevation="5dp"
        android:gravity="bottom">

        <ImageView
            android:layout_marginTop="@dimen/nav_drawer_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_user"
            android:contentDescription="@mipmap/ic_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/nav_drawer_padding"
            android:textSize="@dimen/header_text_size"
            android:padding="@dimen/image_padding"
            android:textColor="@color/white"
            android:text="@string/name"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerImageLayout"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
